<resources>
    <style name="AppTheme" parent="Base.Theme.DesignDemo">
        <!-- 여기에 필요한 item 추가 -->
        <!--<item name="android:statusBarColor">?attr/colorPrimaryVariant</item>-->
     </style>

     <style name="Base.Theme.DesignDemo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
         <!-- 색상 설정 -->
         <item name="colorPrimary">#2962FF</item>
         <item name="colorPrimaryVariant">#0039CB</item>
         <item name="colorSecondary">#00BFA5</item>
         <item name="android:windowDrawsSystemBarBackgrounds">true</item>
         <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
         <!--<item name="android:windowTranslucentStatus">true</item>-->
         <item name="android:navigationBarColor">?attr/colorPrimary</item>
         <item name="android:windowContentTransitions">true</item>
         <item name="android:windowBackground">@color/color_white</item>
     </style>

    <!-- 커스텀 카드뷰 스타일 -->
    <style name="Widget.MyCardView" parent="Widget.MaterialComponents.CardView">
        <!-- 둥근 모서리 -->
        <item name="cardCornerRadius">8dp</item>
        <!-- 그림자 깊이 -->
        <item name="cardElevation">1dp</item>
        <!-- 테두리 두께 -->
        <item name="strokeWidth">1dp</item>
        <!-- 테두리 색상 (res/values/colors.xml 에 정의된 divider 색) -->
        <item name="strokeColor">@color/divider</item>
        <!-- 카드 배경 흰색 -->
        <item name="cardBackgroundColor">@android:color/white</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>


</resources>
