<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/list_margin_top_bottom"
    android:layout_marginLeft="@dimen/item_margin_left"
    android:layout_marginRight="@dimen/item_margin_left"
    android:layout_marginTop="@dimen/list_margin_top_bottom"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/popbg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/item_margin_left"
            android:layout_marginTop="@dimen/item_margin_left"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/item_margin_left"
            android:text="@string/str_setting_alrim"
            android:textColor="@color/color_main_friend_txt"
            android:textSize="@dimen/dlg_title_txt_size"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ad_dlg_info_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="@dimen/item_margin_left"
                android:paddingRight="@dimen/item_margin_left"
                android:paddingTop="@dimen/agreement_margin"
                android:text="@string/str_charge_money_input"
                android:textColor="@color/color_ad_dlg_info_txt"
                android:textSize="@dimen/login_txt_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/agreement_margin"
                android:layout_marginLeft="@dimen/item_margin_left"
                android:layout_marginRight="@dimen/item_margin_left"
                android:layout_marginTop="@dimen/agreement_margin"
                android:background="@drawable/popform"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/item_padding">

                <EditText
                    android:id="@+id/et_charge_money_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:background="@null"
                    android:maxLength="19"
                    android:gravity="center_vertical|right"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/color_ad_dlg_info_txt"
                    android:textSize="@dimen/login_txt_size" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/item_padding"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="@string/str_won"
                    android:textColor="@color/color_input_point_request"
                    android:textSize="@dimen/tab_title_txt_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/item_margin_left"
                android:paddingTop="@dimen/item_margin_left">

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dlg_chk" />

                <TextView
                    android:id="@+id/txt_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/item_margin_left"
                    android:text="@string/str_cancel"
                    android:textColor="@color/color_ad_dlg_info_txt"
                    android:textSize="@dimen/tab_title_txt_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/divider_height"
                android:layout_height="match_parent"
                android:background="@color/color_ad_dlg_info_bg"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@+id/ll_ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/item_margin_left"
                android:paddingTop="@dimen/item_margin_left">

                <Button
                    android:id="@+id/btn_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_dlg_selector" />

                <TextView
                    android:id="@+id/txt_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/item_margin_left"
                    android:text="@string/str_ok"
                    android:textColor="@color/color_ad_dlg_info_txt"
                    android:textSize="@dimen/tab_title_txt_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>