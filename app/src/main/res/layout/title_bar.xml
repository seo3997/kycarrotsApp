<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg5"
    android:paddingEnd="@dimen/item_margin_left">

    <!-- 왼쪽 뒤로가기 -->
    <LinearLayout
        android:id="@+id/ll_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/item_margin_left"
        android:paddingEnd="@dimen/item_margin_left">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/btn_titlebar_pre_selector" />

        <TextView
            android:id="@+id/txt_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_pre"
            android:textColor="@color/color_ad_dlg_info_bg"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/login_find_txt_size" />
    </LinearLayout>

    <!-- 가운데 타이틀 -->
    <TextView
        android:id="@+id/txt_page_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingVertical="@dimen/item_margin_left"
        android:textColor="@color/color_white"
        android:textSize="@dimen/sub_title_txt_size"
        android:textStyle="bold" />

    <!-- 오른쪽 메뉴 -->
    <ImageButton
        android:id="@+id/ib_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:src="@drawable/btn_title_bar_menu_selector"
        android:padding="@dimen/item_margin_left"
        android:visibility="gone" />

</RelativeLayout>
