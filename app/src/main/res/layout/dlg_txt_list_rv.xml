<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_scrim"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true">

    <!-- 가운데 카드 -->
    <LinearLayout
        android:id="@+id/card_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/item_margin_left"
        android:layout_marginRight="@dimen/item_margin_left"
        android:layout_marginTop="@dimen/list_margin_top_bottom"
        android:layout_marginBottom="@dimen/list_margin_top_bottom"
        android:background="@drawable/popbg"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_dlg_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/item_margin_left"
            android:gravity="left"
            android:text="title"
            android:textColor="@color/color_push_back"
            android:textSize="@dimen/login_find_txt_size"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_dlg_title_devider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/color_ad_dlg_info_bg" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="360dp"
            android:overScrollMode="never" />

        <!-- 옵션: 선택 안함 -->
        <TextView
            android:id="@+id/btn_dlg_cancel"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="선택 안함"
            android:textColor="@color/color_dlg_msg"
            android:textSize="14sp"
            android:background="?attr/selectableItemBackground"
            android:visibility="gone" />
    </LinearLayout>
</FrameLayout>
