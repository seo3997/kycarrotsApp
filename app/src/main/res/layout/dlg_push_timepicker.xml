<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_margin_left"
        android:layout_marginRight="@dimen/item_margin_left"
        android:background="@drawable/popbg"
        android:gravity="center"
        android:orientation="vertical">

        <!-- title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/item_margin_left"
                android:layout_marginLeft="@dimen/item_margin_left"
                android:layout_marginTop="@dimen/item_margin_left"
                android:gravity="center_vertical"
                android:text="@string/str_time"
                android:textColor="@color/color_main_friend_txt"
                android:textSize="@dimen/dlg_title_txt_size"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_dlg_title_devider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/color_ad_dlg_info_bg"
            android:orientation="horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/agreement_margin"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="6"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/list_margin_top_bottom"
                    android:layout_marginRight="@dimen/list_margin_top_bottom"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/ib_add_hour"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:paddingBottom="@dimen/item_margin_left"
                        android:paddingTop="@dimen/item_margin_left"
                        android:src="@drawable/btn_date_up_selector" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_height"
                        android:background="@color/color_main_friend_txt" />

                    <EditText
                        android:id="@+id/et_hour"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="2"
                        android:paddingBottom="@dimen/item_margin_left"
                        android:paddingTop="@dimen/item_margin_left"
                        android:textColor="@color/color_my_point"
                        android:textSize="@dimen/authentication_txt_size" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_height"
                        android:background="@color/color_main_friend_txt" />

                    <ImageButton
                        android:id="@+id/ib_minus_hour"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:paddingBottom="@dimen/item_margin_left"
                        android:paddingTop="@dimen/item_margin_left"
                        android:src="@drawable/btn_date_down_selector" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="left">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_push_time_hour"
                    android:textColor="@color/color_my_point"
                    android:textSize="@dimen/authentication_txt_size" />
                </LinearLayout>
		
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/color_ad_dlg_info_bg"
            android:orientation="horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_date_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/item_margin_left"
                android:paddingTop="@dimen/item_margin_left">

                <Button
                    android:id="@+id/btn_date_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dlg_chk" />

                <TextView
                    android:id="@+id/txt_date_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/item_margin_left"
                    android:text="@string/str_cancel"
                    android:textColor="@color/color_ad_dlg_info_txt"
                    android:textSize="@dimen/tab_title_txt_size" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_btn_divider"
                android:layout_width="@dimen/divider_height"
                android:layout_height="match_parent"
                android:background="@color/color_ad_dlg_info_bg"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@+id/ll_date_ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/item_margin_left"
                android:paddingTop="@dimen/item_margin_left">

                <Button
                    android:id="@+id/btn_date_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_dlg_selector" />

                <TextView
                    android:id="@+id/txt_date_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/item_margin_left"
                    android:text="@string/str_ok"
                    android:textColor="@color/color_ad_dlg_info_txt"
                    android:textSize="@dimen/tab_title_txt_size" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>