<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/list_margin_top_bottom"
    android:layout_marginLeft="@dimen/item_margin_left"
    android:layout_marginRight="@dimen/item_margin_left"
    android:layout_marginTop="@dimen/list_margin_top_bottom"
    android:background="@drawable/popbg"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_dlg_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_margin_left"
        android:gravity="left"
        android:text="title"
        android:textColor="@color/color_main_friend_txt"
        android:textSize="@dimen/login_find_txt_size"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll_dlg_title_devider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/color_ad_dlg_info_bg"
        android:orientation="horizontal" />

    <ListView
        android:id="@+id/lv_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/color_ad_dlg_info_bg"
        android:footerDividersEnabled="false"
        android:dividerHeight="@dimen/divider_height"
        android:listSelector="@drawable/popbg_press" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/color_ad_list_item_bg1"
        android:visibility="gone" />
</LinearLayout>