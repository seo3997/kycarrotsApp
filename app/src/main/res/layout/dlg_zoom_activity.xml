<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/list_margin_top_bottom"
    android:layout_marginLeft="@dimen/item_margin_left"
    android:layout_marginRight="@dimen/item_margin_left"
    android:layout_marginTop="@dimen/list_margin_top_bottom"
    android:background="@drawable/popbg"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_dlg_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_margin_left"
        android:gravity="left"
        android:text="@string/str_img_view"
        android:textColor="@color/color_main_friend_txt"
        android:textSize="@dimen/login_find_txt_size"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/color_ad_dlg_info_bg"
        android:orientation="vertical" />

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="@dimen/make_ad_img_height" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/color_ad_dlg_info_bg"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/ll_list_dig_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/item_margin_left"
        android:paddingTop="@dimen/item_margin_left">

        <Button
            android:id="@+id/btn_list_dig_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_dlg_selector" />

        <TextView
            android:id="@+id/txt_list_dig_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_margin_left"
            android:text="@string/str_ok"
            android:textColor="@color/color_ad_dlg_info_txt"
            android:textSize="@dimen/tab_title_txt_size" />
    </LinearLayout>

</LinearLayout>