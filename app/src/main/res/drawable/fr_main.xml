<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_bg"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/rl_top_point"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:background="@color/color_main_friend_txt"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/item_margin_left"
            android:paddingLeft="@dimen/login_margin_top"
            android:paddingRight="@dimen/login_margin_top"
            android:paddingTop="@dimen/item_margin_left">

            <RelativeLayout
                android:id="@+id/rl_my_point"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="bottom"
                    android:text="@string/str_my_point_en"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/etc_txt_size"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/ll_point_add1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:background="@drawable/ad_point_icon_selector"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/item_margin_left">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_point_add1"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/tab_title_txt_size"
                        android:textStyle="bold" />
                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:layout_below="@+id/rl_my_point"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/item_margin_left"
                        android:src="@drawable/point1" />

                    <TextView
                        android:id="@+id/txt_my_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/item_margin_left"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="@color/color_my_point"
                        android:textSize="@dimen/main_point_txt_size"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/ll_point_add2"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/ad_point_icon_selector"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/item_margin_left">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_point_add2"
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/tab_title_txt_size"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@+id/rl_point"
                android:layout_marginTop="@dimen/item_margin_left"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_point_list_detail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/ad_point_icon_selector"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/item_margin_left">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_point_detail_view"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/tab_title_txt_size"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/item_margin_left"
                        android:text=">"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/tab_title_txt_size"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_push_list"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/item_margin_left"
                    android:layout_weight="1"
                    android:background="@drawable/ad_point_icon_selector"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/item_margin_left">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_push_list_view"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/tab_title_txt_size"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/item_margin_left"
                        android:text=">"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/tab_title_txt_size"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_middle_height"
            android:layout_marginTop="@dimen/item_margin_left"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/agreement_margin"
            android:layout_marginRight="@dimen/agreement_margin"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_my_character"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_main_my_character_selector"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/item_margin_left">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_cha" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_cuk_cuk_emotion"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/ad_detail_btn_txt_size"
                    android:textStyle="bold" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/item_margin_left"
                android:layout_weight="2">

                <ImageButton
                    android:id="@+id/ib_ad"
                    android:layout_width="match_parent"
                    android:padding="@dimen/item_padding"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@drawable/main_ad_bg"
                    android:src="@drawable/main_ad_icon" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/item_margin_left"
                    android:layout_marginRight="@dimen/item_margin_left"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_ad"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/ad_detail_btn_txt_size"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/item_padding"
                        android:background="@drawable/main_arrow" />
                </LinearLayout>
            </RelativeLayout>

            <Button
                android:id="@+id/btn_regi_advertiser"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="광고주등록"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_event"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/item_padding"
                android:layout_marginLeft="@dimen/agreement_margin"
                android:layout_marginRight="@dimen/agreement_margin"
                android:layout_marginTop="@dimen/item_padding"
                android:layout_weight="1"
                android:background="@drawable/btn_main_event_selector"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:background="@drawable/event1"
                    android:padding="@dimen/item_margin_left"
                    android:src="@drawable/event_icon" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:background="@drawable/event2"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/item_margin_left"
                    android:paddingRight="@dimen/item_margin_left">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_event"
                            android:textColor="@color/color_main_friend_txt"
                            android:textSize="@dimen/login_txt_size"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/item_padding"
                            android:text="@string/str_event_en"
                            android:textColor="@color/color_main_event_en_txt"
                            android:textSize="@dimen/character_list_item_txt_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_event_info"
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/terms_agree_txt_size" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/item_padding"
                            android:src="@drawable/main_arrow" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <!-- 카톡, 문자, url -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/agreement_margin"
                android:layout_marginRight="@dimen/agreement_margin"
                android:layout_marginBottom="@dimen/item_margin_left"
                android:layout_weight="1"
                android:background="@drawable/bg1"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/item_margin_left">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/ib_send_kakao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:src="@drawable/btn_send_kakao_selector" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/item_padding"
                        android:text="@string/str_kakako"
                        android:textColor="@color/color_main_friend_txt"
                        android:textSize="@dimen/tab_title_txt_size"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/divider_height"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/login_margin_top"
                    android:layout_marginTop="@dimen/login_margin_top"
                    android:background="@drawable/bar_s" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/ib_send_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:src="@drawable/btn_send_sms_selector" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/item_padding"
                        android:text="@string/str_sms"
                        android:textColor="@color/color_main_sms_txt"
                        android:textSize="@dimen/tab_title_txt_size"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/divider_height"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/login_margin_top"
                    android:layout_marginTop="@dimen/login_margin_top"
                    android:background="@drawable/bar_s" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/ib_send_url"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:src="@drawable/btn_send_copy_url_selector" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/item_padding"
                        android:text="@string/str_copy_url"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/tab_title_txt_size"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_progress_circle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:gravity="center"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</FrameLayout>